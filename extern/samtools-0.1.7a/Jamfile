project samtools ;

lib libbam :
    bgzf.c kstring.c bam_aux.c bam.c bam_import.c sam.c bam_index.c bam_pileup.c bam_lpileup.c bam_md.c glf.c razf.c faidx.c knetfile.c bam_sort.c sam_header.c
    /user-config//z
    : <include>./
        <link>static <cflags>-fPIC
    :
    : <include>./
    ;
    
exe samtools :
    bam_tview.c bam_maqcns.c bam_plcmd.c sam_view.c	bam_rmdup.c bam_rmdupse.c bam_mate.c bam_stat.c bam_color.c	bamtk.c kaln.c
    /user-config//z
    /user-config//m    
    /user-config//curses
    /samtools//libbam
    : <include>./
    	<cflags>-D_CURSES_LIB=1
    ;
